package shape;

import java.rmi.RemoteException;
import java.rmi.server.UnicastRemoteObject;

public class Shape extends UnicastRemoteObject implements IShape{

	public Shape() throws RemoteException {
		super();
	}

	@Override
	public int chiviTamGiac(int a, int b, int c) throws RemoteException {
		return a + b + c;
	}

	@Override
	public int chiviHCN(int a, int b) throws RemoteException {
		return (a + b) * 2;
	}

	@Override
	public int chiviHV(int a) throws RemoteException {
		return a * 4;
	}

	@Override
	public int dientichTamGiac(int a, int b, int c) throws RemoteException {
		p = Math.sqrt(chiviTamGiac(a,b,c));
		return 0;
	}

	@Override
	public int dientichHCN(int a, int b) throws RemoteException {
		return a * b;
	}

	@Override
	public int dientichHV(int a) throws RemoteException {
		return a * a;
	}

}
