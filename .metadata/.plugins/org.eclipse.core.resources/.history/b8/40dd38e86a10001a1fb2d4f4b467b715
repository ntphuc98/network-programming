package shape;

import java.rmi.Remote;
import java.rmi.RemoteException;

public interface IShape extends Remote {
	float chuviTamGiac(float a, float b, float c) throws RemoteException;

	int chiviTamGiac(int a, int b, int c) throws RemoteException;

	float chuviHCN(float a, float b) throws RemoteException;

	int chiviHCN(int a, int b) throws RemoteException;

	float chuviHV(float a) throws RemoteException;

	int chiviHV(int a) throws RemoteException;

	float dientichTamGiac(float a, float b, float c) throws RemoteException;

	int dientichTamGiac(int a, int b, int c) throws RemoteException;

	float dientichHCN(float a, float b) throws RemoteException;

	int dientichHCN(int a, int b) throws RemoteException;

	float dientichHV(float a) throws RemoteException;

	int dientichHV(int a) throws RemoteException;
}
